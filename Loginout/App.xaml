<Application x:Class="Loginout.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Loginout"
             xmlns:views="clr-namespace:Loginout.Views"
             xmlns:viewmodels="clr-namespace:Loginout.ViewModels">
    
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:EditUserViewModel}">
            <views:EditUserView />
            
        </DataTemplate>

    </Application.Resources>
</Application>
